<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.ProductViewFragment"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/product_view_list"
        >

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_alignRight="@id/product_image"
            android:background="@android:color/white"
            android:id="@+id/product_fav_button" />

        <TextView
            android:id="@+id/product_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="productname"
            android:layout_below="@id/product_image"
            android:layout_alignLeft="@id/product_image"
            android:layout_alignRight="@id/product_image"></TextView>

        <ImageView
            android:id="@+id/product_euro_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_euro_symbol_black_24dp"
            android:layout_below="@id/product_text" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@id/product_text"
            android:layout_toRightOf="@id/product_euro_symbol"
            android:text="100" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vergelijk_icon"
            android:layout_alignRight="@+id/product_image"
            android:layout_below="@+id/product_text"
            android:src="@drawable/ic_compare_arrows_black_24dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>