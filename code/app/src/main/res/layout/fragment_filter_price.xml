<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.filter.FilterPrice">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Reset"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/sort_item_resetbutton"
            ></Button>
        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/sort_price_rangeSeekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:bar_color="@color/colorPrimary"
            app:bar_highlight_color="@color/colorAccent"
            app:data_type="_integer"
            app:left_thumb_color="@color/colorAccent"
            app:max_value="2000"
            app:min_value="0"
            app:right_thumb_color="@color/colorAccent"
            app:steps="20"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sort_price_rangeSeekbar"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2000"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sort_price_rangeSeekbar"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sort_price_rangeSeekbar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min:"

                android:id="@+id/sort_price_min"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="max:"
                android:id="@+id/sort_price_max"
                android:layout_marginLeft="50dp"></TextView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>