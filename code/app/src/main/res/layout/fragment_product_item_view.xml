<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/product_image_view"
            ></ImageView>


        <TextView
            android:layout_width="305dp"
            android:layout_height="100dp"
            android:layout_below="@+id/product_image_view"
            android:text="Productname"
            android:textSize="40dp"
            android:id="@+id/product_name_view">
            <!--android:textAlignment="center"-->

        </TextView>

        <ImageView
            android:id="@+id/product_euro_symbol_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_name_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_euro_symbol_black_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></ImageView>

        <TextView
            android:id="@+id/product_price_view"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_below="@+id/product_name_view"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/product_euro_symbol_view"
            android:text="100"
            android:textSize="30dp"></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/product_name_view"
            android:layout_below="@+id/product_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/product_buttons">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wishlist_lin"
                android:layout_marginTop="10dp">
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_view_addToWishlist"
                android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wishlist"
                    android:layout_below="@id/product_view_addToWishlist"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/map_lin"
                android:orientation="vertical"
                android:layout_below="@+id/wishlist_lin"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_view_Location"
                    android:src="@drawable/ic_pin_drop_black_24dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kaart"
                    android:layout_below="@id/product_view_Location"
                    android:layout_centerHorizontal="true"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_lin"
                android:orientation="vertical"
                android:layout_below="@+id/map_lin"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_view_Share"
                    android:src="@drawable/ic_share_black_24dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delen"
                    android:layout_below="@id/product_view_Share"
                    android:layout_centerHorizontal="true"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shoppingcart_lin"
                android:orientation="vertical"
                android:layout_below="@+id/share_lin"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_view_shoppingcart"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wagen"
                    android:layout_below="@id/product_view_shoppingcart"
                    android:layout_centerHorizontal="true"></TextView>
            </RelativeLayout>
        </RelativeLayout>


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:id="@+id/rating_bar"
            android:layout_below="@+id/product_price_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/product_view_description_text"
            android:text="Specificaties"
            android:textSize="30dp"
            android:layout_below="@+id/rating_bar"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expand_description_button"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_below="@+id/product_price_view"
            android:layout_toRightOf="@+id/product_buttons"
            android:layout_marginTop="70dp"/>

        <at.blogc.android.views.ExpandableTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/product_view_description_text"
            android:id="@+id/expandable_description"
            android:text="@string/loremIpsum"
            android:maxLines="0"
            android:ellipsize="end"
            />
    </RelativeLayout>

</ScrollView>