<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.filter.FilterItem"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/sort_item_dropdown">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:id="@+id/sort_item_dropdownicon"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:id="@+id/sort_item_name"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sort_item_fragmentcontainer"
        android:layout_below="@id/sort_item_dropdown"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></RelativeLayout>


</RelativeLayout>